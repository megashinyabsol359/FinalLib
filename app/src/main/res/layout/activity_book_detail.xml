<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Book Cover -->
            <ImageView
                android:id="@+id/iv_book_cover_detail"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:contentDescription="Bìa sách"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- Book ID -->
            <TextView
                android:id="@+id/tv_detail_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID: "
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Book Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề:"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề sách"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Book Author -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tác giả:"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_detail_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tác giả"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Book Language -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngôn ngữ:"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_detail_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngôn ngữ"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Book Tags -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tags:"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_detail_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Action Buttons -->
            <Button
                android:id="@+id/btn_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tải sách"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đánh giá"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Reviews Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đánh giá từ người dùng"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_no_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chưa có đánh giá nào"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#999999"
                android:padding="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
