<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_open_upload_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Sách Mới"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_uploads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#6200EE"
        app:tabSelectedTextColor="#6200EE">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang chờ" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã đăng" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_uploaded_books"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/tv_empty_uploads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn chưa upload cuốn sách nào trong mục này."
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="32dp" />

    <ProgressBar
        android:id="@+id/pb_loading_uploads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
