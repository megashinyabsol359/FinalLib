<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề Dialog -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Sách Mới"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Tên Sách (Bắt Buộc) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Tên sách *">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tác Giả (Bắt Buộc) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Tác giả *">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ngôn Ngữ (Bắt Buộc) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngôn ngữ *"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Mô Tả Sách (Bắt Buộc) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Mô tả sách *">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tags (Danh Sách Checkbox) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tags *"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_toggle_tags"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Hiện Tags"
                android:textSize="12sp"
                android:backgroundTint="#FFC107"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/tag_frame_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_no_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đang tải tags..."
                    android:textSize="12sp"
                    android:textColor="#999999" />
            </LinearLayout>
        </FrameLayout>

        <!-- Chọn File (Bắt Buộc) -->
        <Button
            android:id="@+id/btn_select_file"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Chọn File Sách"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="12dp" />

        <!-- Hiển thị file đã chọn -->
        <TextView
            android:id="@+id/tv_selected_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa chọn file"
            android:textSize="12sp"
            android:textColor="#666666"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="16dp" />

        <!-- Ảnh Bìa Sách (Optional) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ảnh bìa sách (Optional)"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_book_cover"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:contentDescription="Ảnh bìa sách"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_select_cover"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Chọn Ảnh Bìa"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="16dp" />

        <!-- Accessibility (Public/Private) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại sách"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rg_accessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rb_public"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Public (Miễn phí)"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_private"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Private (Trả phí)" />

        </RadioGroup>

        <!-- Giá Tiền (Chỉ hiện khi chọn Private) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Giá tiền (VND)"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/tv_upload_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Button Upload -->
        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Upload Sách"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="8dp" />

        <!-- Button Hủy -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Hủy"
            android:backgroundTint="#9E9E9E" />
    </LinearLayout>
</ScrollView>
